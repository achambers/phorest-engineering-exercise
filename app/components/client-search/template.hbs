<div local-class="client-search">
  <div local-class="search-icon">
    <img src="/images/search-icon.png" alt="">
  </div>

  <input type="text"
    local-class="search-box"
    data-test-search-box
    autocomplete="off" autocorrect="off" autocapitalize="off" spellcheck="false"
    placeholder="Search clients by email or phone number"
    oninput={{perform debouncedSearch value="target.value"}}>

    <div local-class="spinner">
      {{#if search.isRunning}}
        {{loading-spinner}}
      {{/if}}
    </div>
</div>

<div local-class="client-search-results">
  {{#if publicApi.term}}
    {{#if publicApi.clients}}
      {{#if hasBlock}}
        {{yield publicApi}}
      {{else}}
        {{!-- We can provide a default implementation of the search results here --}}
      {{/if}}
    {{else}}
      <div local-class="no-results" data-test-no-results>No results</div>
    {{/if}}
  {{/if}}
</div>
